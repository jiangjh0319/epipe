<template>
  <div v-bind:class="{ chose_blue: color }" class="header_top">
    <div class="itme_tabs">
      <div v-if="path" @click="ReturnBack" class="header_back_left">
        <img style="width: 0.2rem" src="../img/back.png"/>
      </div>
    </div>
    <div class="itme_tabs">{{title}}</div>
    <div class="itme_tabs"></div>
  </div>
</template>

<script>
  export default {
    props: [
      'title',
      'path',
      'query',
      'color'
    ],
    methods: {
      ReturnBack(){
        if (this.path == 'back') {
          window.history.back()
        } else {
          this.$router.push({
            path: this.path,
            query: this.query
          })
        }
      }
    }
  }
</script>

