<template style="width: 100%;height: 100%">
  <div class="content">
    <HeaderTop path="back" title="工作台"></HeaderTop>
    <div class="scroll_content">
      <ul class="date_top_con">
        <li @click="goleft">左边</li>
        <li style="font-size: 20px;flex: 1.5">{{topdate}}</li>
        <li @click="goright">右边</li>
      </ul>
      <ul class="date_piker_con" style="display:flex;flex-direction: row">
        <li>一</li>
        <li>二</li>
        <li>三</li>
        <li>四</li>
        <li>五</li>
        <li>六</li>
        <li>日</li>
      </ul>
      <ul class="date_piker_li">
        <li @click="chosetime(index,item.id)" v-for="(item,index) in dateArrray">
          <div v-bind:class="{ div_choserd: item.mark, div_today:item.todaymark }">{{item.id}}</div>
        </li>
      </ul>
    </div>
  </div>
</template>

<script>
  import HeaderTop from '../../components/header.vue'
  import Util from '../../js/Util.js'
  let mydate
  let myyear
  let mymonth
  let myday
  let hasDay
  /*当前月的第一天*/
  function getDaysInOneMonth(year, month) {
    month = parseInt(month, 10);
    var d = new Date(year, month, 0);
    return d.getDate()
  }
  /*公共的方法*/
  function commonways(mydate) {
    myyear = mydate.getFullYear()
    mymonth = mydate.getMonth() + 1
    myday = mydate.getDate()
    hasDay = getDaysInOneMonth(myyear, mymonth)
    /*一号是星期几*/
    function getnum(dataone) {
      let num = new Date(dataone).getDay()
      if (num == 0) {
        return 6
      } else {
        return num - 1
      }
    }
    let dataone = myyear + '-' + mymonth + '-'
    getnum(dataone)
    console.log(getnum(dataone))
    let array = []
    for (var i = 1; i <= getnum(dataone); i++) {
      array.push({id: ''})
    }
    for (var i = 1; i <= hasDay; i++) {
      if (mydate.getMonth()== new Date().getMonth()) {
        if (i == myday) {
          array.push({id: i, mark: false, todaymark: true})
        } else {
          array.push({id: i, mark: false, todaymark: false})
        }
      } else {
        array.push({id: i, mark: false, todaymark: false})
      }
    }
    console.log(array)
    console.log(Util.getNewTime(mydate))
    console.log(Util.getNewTime(new Date()))
    return array
  }

  function getPreMonth(mydate) {
    var arr = mydate.split('-');
    var year = arr[0]; //获取当前日期的年份
    var month = arr[1]; //获取当前日期的月份
    var day = arr[2]; //获取当前日期的日
    var days = new Date(year, month, 0);
    days = days.getDate(); //获取当前日期中月的天数
    var year2 = year;
    var month2 = parseInt(month) - 1;
    if (month2 == 0) {
      year2 = parseInt(year2) - 1;
      month2 = 12;
    }
    var day2 = day;
    var days2 = new Date(year2, month2, 0);
    days2 = days2.getDate();
    if (day2 > days2) {
      day2 = days2;
    }
    if (month2 < 10) {
      month2 = '0' + month2;
    }
    var t2 = year2 + '-' + month2 + '-' + day2;
    return t2;
  }

  function getNextMonth(mydate) {
    var arr = mydate.split('-');
    var year = arr[0]; //获取当前日期的年份
    var month = arr[1]; //获取当前日期的月份
    var day = arr[2]; //获取当前日期的日
    var days = new Date(year, month, 0);
    days = days.getDate(); //获取当前日期中的月的天数
    var year2 = year;
    var month2 = parseInt(month) + 1;
    if (month2 == 13) {
      year2 = parseInt(year2) + 1;
      month2 = 1;
    }
    var day2 = day;
    var days2 = new Date(year2, month2, 0);
    days2 = days2.getDate();
    if (day2 > days2) {
      day2 = days2;
    }
    if (month2 < 10) {
      month2 = '0' + month2;
    }

    var t2 = year2 + '-' + month2 + '-' + day2;
    return t2;
  }
  export default {
    data () {
      return {
        dateArrray: [],
        topdate: ''
      }
    },
    components: {
      HeaderTop
    },
    methods: {
      chosetime(index, id){
        if (id != '') {
          let array = this.dateArrray
          for (let i = 0; i < array.length; i++) {
            if (i == index) {
              array[index].mark = true
            } else {
              array[i].mark = false
            }
          }
          console.log(mymonth + '月' + id + '日')
          this.dateArrray = array
        }
      },
      goleft(){
        mydate = myyear + '-' + mymonth + '-' + myday
        if(new Date(getPreMonth(mydate)).getMonth()==new Date().getMonth()){
          this.dateArrray = commonways(new Date())
        }else{
          this.dateArrray = commonways(new Date(getPreMonth(mydate)))
        }
        this.topdate = myyear + '年' + mymonth + '月'
      },
      goright(){
        mydate = myyear + '-' + mymonth + '-' + myday
        if(new Date(getPreMonth(mydate)).getMonth()==new Date().getMonth()){
          this.dateArrray = commonways(new Date())
        }else{
          this.dateArrray = commonways(new Date(getNextMonth(mydate)))
        }
        this.topdate = myyear + '年' + mymonth + '月'
      }
    },
    mounted: function () {
      mydate = new Date()
      console.log(mydate)
      this.dateArrray = commonways(mydate)
      this.topdate = myyear + '年' + mymonth + '月'
    }

  }
</script>

